{
  "name": "claude-code-cms",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A Next.js 15 starter kit with Claude Code integration, multilingual support, and markdown-based content management.",
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "npm run lint && next build",
    "build:skip-lint": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run format:check",
    "postbuild": "next-sitemap --config next-sitemap.config.cjs",
    "generate-image": "npx ts-node --esm scripts/generate-image.ts",
    "import-webflow": "npx tsx scripts/import-webflow-csv.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "framer-motion": "^12.23.26",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.1",
    "lucide-react": "^0.562.0",
    "next": "^15.1.0",
    "next-sitemap": "^4.2.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/turndown": "^5.0.5",
    "autoprefixer": "^10.4.22",
    "csv-parse": "^5.6.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "^15.1.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.8.0",
    "tailwindcss": "^4.1.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "turndown": "^7.2.0",
    "typescript": "~5.9.3"
  }
}
